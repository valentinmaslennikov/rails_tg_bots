<div class="bg-image"></div>
<div class="container tea-table">
  <div class="row">
    <div class="col-sm">
      <table class="table table-striped table-dark">
        <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">username</th>
          <th scope="col">text</th>
        </tr>
        </thead>
        <tbody>
        <% @offences.each do |t| %>
          <tr>
            <th scope="row"><%= t.id %></th>
            <td><%= t.username %></td>
            <td><%= t.text %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>